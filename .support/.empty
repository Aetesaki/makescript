# ##################################################
# no arguments gives short help
# ##################################################
# if number of arguments is 0
if [ "$#" == "0" ]; then
	# if length of $pipe is 0
	if [ -z "$pipe" ]; then
		# display shorthelp and exit
		shorthelp
		exit 1
	else
		# else set arguments to $pipe
		set -- "$pipe"
	fi
fi 
